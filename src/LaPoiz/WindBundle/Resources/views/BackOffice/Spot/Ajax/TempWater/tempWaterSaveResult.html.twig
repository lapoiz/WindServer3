
        {% if  previsionTempWaterList is defined and previsionTempWaterList!=null %}
        <h2>Prévision des T°C de l'eau dans la Base de données</h2>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-2">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Date Prev</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        {% for previsionTempWater in previsionTempWaterList %}
                            <tr>
                                <td>{{ previsionTempWater.datePrev|date("d/m/Y") }}</td>
                                <td>{{ previsionTempWater.created|date("d/m/Y H:m:s") }}</td>
                                <td>{{ previsionTempWater.tempWater }}°C</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>


        {% endif %}