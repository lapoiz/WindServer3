

        <h2>Notes du spot</h2>

        <table class="table table-hover table-bordered">

            <thead>
                <tr>
                    <th>Date</th>
                    <th>Vent</th>
                    <th>Marée</th>
                    <th>Meteo</th>
                    <th>T°C</th>
                </tr>
            </thead>

            <tbody>
            {% for notesDate in spot.notesDate %}
                <tr>
                    <th>{{ notesDate.datePrev|date("d/m/Y") }}</th>
                    <td>
                        {% if notesDate.noteWind is not defined or notesDate.noteWind is null %}
                            {{ "?" }}
                        {% else %}
                            {{ notesDate.noteWind }}
                        {% endif %}
                    </td>
                    <td>
                        {% if notesDate.noteMaree is not defined or notesDate.noteMaree is null %}
                            {{ "?" }}
                        {% else %}
                            {{ notesDate.noteMaree }}
                        {% endif %}
                    </td>
                    <td>
                        {% if notesDate.noteMeteo is not defined or notesDate.noteMeteo is null %}
                            {{ "?" }}
                        {% else %}
                            {{ notesDate.noteMeteo }}
                        {% endif %}
                    </td>
                    <td>
                        {% if notesDate.noteTemp is not defined or notesDate.noteTemp is null %}
                            {{ "?" }}
                        {% else %}
                            {{ notesDate.noteTemp }}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>

        </table>