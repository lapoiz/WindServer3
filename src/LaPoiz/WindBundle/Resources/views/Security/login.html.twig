{% extends 'LaPoizWindBundle:FrontOffice:base.html.twig' %}


{% block title %}Authentification requise{% endblock %}

 
 {% block articleTitle %}
 	Authentifiez vous
 {% endblock %}
 
{% block bodyPage %}

	{% if error %}
		<div>{{ error.message }}</div>
	{% endif %}

 

<form action="{{ path('login_check') }}" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="_target_path" value="{{ url('_bo_index') }}" />
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">{{ "auth.username.label" | trans }}</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">{{ "auth.password.label" | trans }}:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Password" name="_password" >
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" value="login" >{{ "auth.button.login" | trans }}</button>
        </div>
    </div>
</form>
{% endblock %}